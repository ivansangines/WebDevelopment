@page
@model StDb2EFRP.Pages.Enroll.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Enroll.CourseNum" class="control-label"></label>
                <select asp-for="Enroll.CourseNum" asp-items="@Model.CNum"></select>
            </div>
            <div class="form-group">
                <label asp-for="Enroll.StudentId" class="control-label"></label>
                <input asp-for="Enroll.StudentId" class ="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Enroll.SectionNum" class="control-label"></label>
                <input asp-for="Enroll.SectionNum" class="form-control" />
                <span asp-validation-for="Enroll.SectionNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enroll.Cnum" class="control-label"></label>
                <input asp-for="Enroll.Cnum" class="form-control" />
                <span asp-validation-for="Enroll.Cnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
