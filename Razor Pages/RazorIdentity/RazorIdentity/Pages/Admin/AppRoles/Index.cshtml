@page
@model RazorIdentity.Pages.Admin.AppRoles.IndexModel

@{
    ViewData["Title"] = "Roles Management";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New || </a>
    <a asp-page="AddUser">Add New User || </a>
    <a asp-page="ManageUsers">All Users</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AspNetRoles[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetRoles[0].NormalizedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetRoles[0].ConcurrencyStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AspNetRoles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
